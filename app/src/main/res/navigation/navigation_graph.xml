<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/dashboardFragment">


    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.cryptrax.trx_miner.presentation.fragment.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <argument
            app:argType="string"
            android:name="listContent"/>
        <action
            android:id="@+id/action_dashboardFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" >
            <argument
                app:argType="string"
                android:name="dataContent"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.cryptrax.trx_miner.presentation.fragment.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details"  >
        <argument
            app:argType="string"
            android:name="dataContent"/>
        <argument
            app:argType="integer"
            android:name="position"/>
    </fragment>


</navigation>